<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag_main"
    >


    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="어디가 아프세요?"
        android:textSize="40sp"
        android:textAlignment="center"
        android:background="#81C784"
        android:layout_margin="4dp"/>




    <ImageView
        android:id="@+id/img_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/head"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_below="@id/text"
        android:clickable="true"

        />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text"
        android:background="@drawable/btn_shape"
        android:onClick="clickHead"
        />

    <ImageView
        android:id="@+id/img_body"
        android:layout_width="110dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:layout_below="@id/img_head"
        android:src="@drawable/body"
        />
    <Button
        android:layout_width="110dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_head"
        android:background="@drawable/btn_shape"
        />

    <ImageView
        android:id="@+id/img_left_arm00"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/img_body"
        android:layout_toStartOf="@id/img_body"
        android:clickable="true"
        android:onClick="clickLeftArm00"
        android:src="@drawable/arm2" />
    <Button
        android:id="@+id/arm"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:layout_alignTop="@id/img_body"
        android:layout_toStartOf="@id/img_body"
        android:background="@drawable/btn_shape"
        />

    <ImageView
        android:id="@+id/img_left_arm01"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_below="@+id/img_left_arm00"
        android:layout_alignStart="@+id/img_left_arm00"
        android:clickable="true"
        android:onClick="clickLeftArm01"
        android:src="@drawable/arm"/>

    <ImageView
        android:id="@+id/img_hand"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@id/img_left_arm01"
        android:layout_below="@id/img_left_arm01"
        android:clickable="true"
        android:onClick="clickLeftHand"
        android:src="@drawable/hand2"/>

    <ImageView
        android:id="@+id/img_right_arm00"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:src="@drawable/arm2"
        android:layout_alignTop="@+id/img_body"
        android:layout_toEndOf="@+id/img_body"
        android:clickable="true"
        android:onClick="clickRightArm00"/>

    <ImageView
        android:id="@+id/img_right_arm01"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:src="@drawable/arm"
        android:layout_below="@+id/img_right_arm00"
        android:layout_alignEnd="@+id/img_right_arm00"
        android:clickable="true"
        android:onClick="clickRightArm01"/>

    <ImageView
        android:id="@+id/img_right_hand"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/hand1"
        android:layout_below="@+id/img_right_arm01"
        android:layout_alignEnd="@+id/img_right_arm01"
        android:clickable="true"
        android:onClick="clickRightHand"
       />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/img_right_arm01"
        android:layout_alignEnd="@+id/img_right_arm01"
        android:background="@drawable/btn_shape"
        />

    <ImageView
        android:id="@+id/img_left_leg00"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:src="@drawable/leg"
        android:layout_below="@id/img_body"
        android:layout_alignLeft="@id/img_body"
        android:clickable="true"
        android:onClick="clickLeftLeg00"/>
    <Button
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:background="@drawable/btn_shape"
        android:layout_below="@id/img_body"
        android:layout_alignLeft="@id/img_body"/>
    <ImageView
        android:id="@+id/img_left_leg01"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:src="@drawable/leg"
        android:layout_below="@id/img_left_leg00"
        android:layout_alignLeft="@id/img_body"
        android:clickable="true"
        android:onClick="clickLeftLeg01"/>
    <ImageView
        android:id="@+id/left_foot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/foot2"
        android:layout_below="@id/img_left_leg01"
        android:layout_alignEnd="@id/img_left_leg01"
        android:clickable="true"
        android:onClick="clickLeftFoot"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_shape"
        android:layout_below="@id/img_left_leg01"
        android:layout_alignEnd="@id/img_left_leg01"/>

    <ImageView
        android:id="@+id/img_right_leg00"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:src="@drawable/leg"
        android:layout_below="@id/img_body"
        android:layout_alignRight="@id/img_body"
        android:clickable="true"
        android:onClick="clickRightLeg00"/>
    <ImageView
        android:id="@+id/img_right_leg01"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:src="@drawable/leg"
        android:layout_below="@id/img_right_leg00"
        android:layout_alignRight="@id/img_body"
        android:clickable="true"
        android:onClick="clickRightLeg01"/>
    <Button
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_below="@id/img_right_leg00"
        android:layout_alignRight="@id/img_body"
        android:background="@drawable/btn_shape"
        />

    <ImageView
        android:id="@+id/right_foot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/foot1"
        android:layout_below="@id/img_right_leg01"
        android:layout_alignLeft="@id/img_right_leg01"
        android:clickable="true"
        android:onClick="clickRightFoot"
        />



</RelativeLayout>